{% extends '@!EasyAdmin/crud/form_theme.html.twig' %}
{% block ea_fileupload_widget %}
    {{ parent() }}
    {% if value is not empty %}
        {% set path = value | split('/') %}
        {% set last = path | length - 1 %}
        {% if path[last] is not empty and path[last] matches '{\.(jpe?g|png|gif|webp|jfif)$}' %}
            <img src="/{{ download_path }}/{{ path[last] }}" class="border m-1 p-1" height="75">
        {% endif %}
    {% endif %}
{% endblock %}
